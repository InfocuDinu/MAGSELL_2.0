<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bakerymanager.controller.InventoryController"
            stylesheets="@../css/style.css">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <!-- Top Header -->
    <top>
        <VBox styleClass="header" spacing="20">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label text="Gestiune Stocuri" styleClass="header-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="âž• AdaugÄƒ Ingredient" onAction="#addIngredient" styleClass="button success"/>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <SplitPane dividerPositions="0.3" orientation="HORIZONTAL">
            
            <!-- Ingredients Table -->
            <VBox spacing="20">
                <HBox alignment="CENTER_LEFT" spacing="15">
                    <Label text="Lista Ingrediente" styleClass="label-title"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="ðŸ”„ ReÃ®ncarcÄƒ" onAction="#loadIngredients" styleClass="button primary"/>
                </HBox>
                
                <TableView fx:id="ingredientsTable" styleClass="table-view"/>
            </VBox>
            
            <!-- Add/Edit Form -->
            <VBox styleClass="form-pane" spacing="20">
                <Label text="AdaugÄƒ/ModificÄƒ Ingredient" styleClass="label-title"/>
                
                <GridPane hgap="15" vgap="15">
                    <Label text="Nume:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="text-field"/>
                    
                    <Label text="Cantitate:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="quantityField" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="text-field"/>
                    
                    <Label text="Unitate:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="unitCombo" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="combo-box"/>
                    
                    <Label text="PreÈ› AchiziÈ›ie:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="priceField" GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="text-field"/>
                    
                    <Label text="Stoc Minim:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <TextField fx:id="minStockField" GridPane.rowIndex="4" GridPane.columnIndex="1" styleClass="text-field"/>
                    
                    <Label text="Cod Bare:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                    <TextField fx:id="barcodeField" GridPane.rowIndex="5" GridPane.columnIndex="1" styleClass="text-field"/>
                </GridPane>
                
                <HBox spacing="15" alignment="CENTER_RIGHT">
                    <Button text="SalveazÄƒ" onAction="#saveIngredient" styleClass="button success"/>
                    <Button text="È˜terge" onAction="#deleteIngredient" styleClass="button danger"/>
                    <Button text="AnuleazÄƒ" onAction="#clearForm" styleClass="button"/>
                </HBox>
            </VBox>
            
        </SplitPane>
    </center>
    
    <!-- Bottom Status Bar -->
    <bottom>
        <HBox styleClass="status-bar" alignment="CENTER_LEFT" spacing="15">
            <padding>
                <Insets top="5" right="15" bottom="5" left="15"/>
            </padding>
            <Label fx:id="statusLabel" text="Sistem gata de utilizare" styleClass="status-label"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="totalIngredientsLabel" text="Total ingrediente: 0" styleClass="status-label"/>
        </HBox>
    </bottom>
    
</BorderPane>
